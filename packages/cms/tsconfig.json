{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2019", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "declaration": false,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@components": ["./pages/components/*"],
      "@pages": ["./pages/*"]
    }
  },
  "exclude": ["plugin/"]
}
